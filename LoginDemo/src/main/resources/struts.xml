<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN"
    "https://struts.apache.org/dtds/struts-6.0.dtd">

<struts>

	<package name="jsonPackage" namespace = "/products" extends="json-default">
	    <action name="getProducts" class="com.logindemo.action.ProductAction" method = "getProductsList">
	        <result type="json">
	            <param name="root">products</param>
	        </result>
	    </action>
	    
	    <action name="getCategories" class="com.logindemo.action.ProductAction" method = "getCategoryLists">
	    	<result type = "json">
	    		<param name="root">categoryList</param>
	    	</result>
	    
	    </action>
	</package>


	<package name="auth" namespace="/" extends="struts-default">

		<action name="checkUser" class="com.logindemo.action.UserAuthAction" method="login"></action>

		<action name="*" class="com.logindemo.action.UrlRedirectionAction">
			<result name="success">/homePage.html</result>
			<result name="error">/error.html</result>
		</action>

		<action name="signupUser" class="com.logindemo.action.UserAuthAction" method="signup"></action>

		<action name="authenticate" class="com.logindemo.action.UserAuthAction" method="authenticate">
		
			<result name ="success">/homePage.html</result>
			<result name ="success">/Login.html</result>
			
		</action>
		
		<action name="logout" class="com.logindemo.action.UserAuthAction" method="logout">
			<result name = "login">login</result>
		</action>

	</package>
	
	
	<package name="default" namespace="/" extends="struts-default">
	
	    <action name="login">
	        <result >Login.html</result>
	    </action>
	    
	    <action name="home"  class="com.logindemo.action.UserAuthAction" method="authenticate">
	        <result name = "success">homePage.html</result>
	        <result name = "error" > login</result>
	    </action>
	    
	</package>


</struts>
