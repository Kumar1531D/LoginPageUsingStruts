<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN"
    "https://struts.apache.org/dtds/struts-6.0.dtd">

<struts>
	
	<!-- Login -->
  <package name = "login" namespace = "/" extends = "struts-default">
  	
  	<action name = "checkUser" class="com.logindemo.action.LoginAction"></action>
  	
  	<action name="*" class="com.logindemo.action.UrlRedirectionAction">
    	<result name="success">/homePage.html</result> 
    	<result name="error">/error.html</result> 
	</action> 
  	
  
  </package>
  
  <!-- Signup -->
  <package name = "signup" namespace = "/" extends = "struts-default">
  	
  	<action name = "signupUser" class="com.logindemo.action.SignupAction"></action>
  
  </package>
  
  <!-- Authentication -->
  <package name = "authentication" namespace = "/" extends = "struts-default">
  	
  	<action name = "authenticate" class="com.logindemo.action.AuthenticateAction"></action>
  
  </package>
  
  
</struts>
